@model DogGo2.Models.ViewModels.WalkerProfileViewModel 

@{ ViewData["Title"] ="Profile"; }
<div>
  <h1 class="mb-4">@Model.Walker.Name</h1>

  <section class="col-sm-2">
     <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
    <div>
      <label class="font-weight-bold">Neighborhood:</label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  <div class="row">
    <section class="col-8 container mt-5">
      <h1 class="text-left">Walks</h1>

      <div class="row">
        @foreach (Walks walks in Model.Walks) {
        <div class="card m-4" style="width: 18rem;">
          <div class="card-body">
            <div>
              <label class="font-weight-bold">Duration:</label>
              <span>@walks.Duration</span>
            </div>
            <div>
              <label class="font-weight-bold">Date:</label>
              <span>@walks.Date</span>
            </div>
          </div>
        </div>
        }
      </div>
    </section>
    <section class="col-8 container mt-5">
      <h1 class="text-left">Walk Duration Total</h1>
        <div>
          @Model.Walks.Sum(i => i.Duration)
         </div>
    </section>
</div>